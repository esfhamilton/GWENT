<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>GWENT</title>
        <meta name="description" content="A browser based platform for playing the card game GWENT.">
        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
        <h1>GWENT ONLINE</h1>
        
        <button class="btn"><h2>CREATE ROOM</h2></button>
        <button class="btn"><h2>JOIN GAME</h2></button>
        <form action="">
            <input placeholder="Enter Session ID" id="m" autocomplete="off" >
        </form>
        
        <!--
        <ul id="messages"></ul>
        <form action="">
            <input id="m" autocomplete="off" /><button>Send</button>
        </form>
        -->
        <script src="/socket.io/socket.io.js"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>    
        <script>
            $(function () {
                var socket = io();
                $('form').submit(function(e) {
                e.preventDefault(); // prevents page reloading
                socket.emit('chat message', $('#m').val());
                $('#m').val('');
                return false;
                });
                socket.on('chat message', function(msg){
                    $('#messages').append($('<li>').text(msg));
                });
            });
        </script>
    </body>
</html>
